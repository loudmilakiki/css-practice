  <header class='header'>
      <div>
       {{> logo}} 
      </div>

      <nav class='header_nav'>
         <div class="header_nav_right">
        {{> nav list=header}}
        </div>
      </nav>
    </header>

    <div>
     {{#with main}}
      <div class="main">

         <div class="main_content">
           <h2 class="main_heading">{{heading}}</h2>
           <p class="main_descriotion">{{descriotion}}</p>
           <a class="button main_button" href="{{href}}">{{button}}</a>
         </div>

        <img src="{{image}}" alt="Main image" class="main_image">

      </div>
     {{/with}}


  <div class="featured">
     {{#each featured}}        
      {{> cardFeatured data=this}}
     {{/each}}
  </div>

  <div class="actions">
   
    {{#each actions}}
    <div class="actions_content">
      <div class="actions_heading">{{heading}}</div>
       <div class="actions_text">
      <a  class=" botton actions_botton" url="{{url}}">{{text}}</a>
      </div>
     </div>
    {{/each}}
    </div>



    <footer class="footer">   
       <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
       </div>
      {{#each footer}}
      <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
      </div>
      {{/each}}
    </footer>

