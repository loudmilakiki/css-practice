<form class='form'>

  <div class='form_inputs_list'>
    {{#each inputs}}
      <input
        type='{{type}}'
        placeholder='{{placeholder}}'
        class='form_input'
        name='{{name}}'
        id='form_input{{id}}'
      />
    {{/each}}
  </div>

  <div class='form_checkbox'>

    <input
      type='checkbox'
      name='{{checkbox.name}}'
      id='{{checkbox_name}}'
    />
    <div></div>
    <label
      form='{{checkbox_name}}'
    >{{checkbox.label}}</label>
  </div>

  <button
    type='submit'
    class='form_button'
  >{{button}}</button>

  <p class='form_info'>{{info}}</p>

</form>